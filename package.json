{
  "name": "mp-stream-notifier",
  "version": "0.1.0",
  "description": "多プラットフォーム配信通知拡張機能 - Chrome Extension for multi-platform streaming notifications",
  "private": true,
  "scripts": {
    "build": "webpack --config webpack.config.js --mode=production",
    "dev": "webpack --config webpack.config.js --mode=development --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,html,css,json}\"",
    "test": "jest"
  },
  "keywords": [
    "chrome-extension",
    "twitch",
    "youtube",
    "twitcasting",
    "streaming",
    "notifications"
  ],
  "author": "Tomozow",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "html-webpack-plugin": "^5.5.4",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.1.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}